<h1>Edit Recruitment</h1>

<%= form_with model: @recruitment, local: true do |form| %> 
  <p>
    <%= form.label :room_name,"Room Name" %><br>
    <%= form.text_field :room_name %>
  </p>

  <p>
    <%= form.label :room_url,"URL" %><br>
    <%= form.text_field :room_url %>
  </p>

  <p>
    <%= form.label :description,"Description" %><br>
    <%= form.text_area :description %>
  </p>
  
  <p>
    <%= form.label :password,"Password" %><br>
    <%= form.password_field :password %>
  </p>

  <p>
     <%= submit_tag "Edit" %>
  </p>

<% end %>


<%= form_with url:recruitment_path, method: :delete, local: true do |form| %>
  <p>
    <%= form.label :password,"Password for deletion " %><br>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.submit "Delete" %>
  </p>
<% end %>


<%= link_to 'Back',recruitments_path %>
